{
  "manifest_version": 3,
  "name": "Chrome Tab Cleanup",
  "version": "1.0",
  "description": "Automatically manages and closes inactive tabs based on user preferences",
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "history",
    "notifications",
    "alarms",
    "background",
    "system.memory",
    "system.cpu"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 